<div class="container">
    <div class="jumbotron">
        <img class="logo img-responsive" src="/img/apollo.png" alt="apollo">
        <h1 class="text-center">Apollo</h1>
    </div>
    <form id="signin" name="signin" method="post" action="signin">
        <h2 class="form-signin-heading">Please log in</h2>

        <label for="email">Email Address</label>
        <input name="email" type="text" class="form-control" placeholder="email@email.com" required autofocus />
        <label for="password">Password</label>
        <input name="password" type="password" class="form-control" placeholder="Password" required/>
        <button class="btn btn-lg btn-primary btn-block" type="submit" value="Sign In">Log in</button>
        <a href="/signup" class="btn btn-lg btn-primary btn-block" value="Sign Up">Register</a>
    </form>
</div>